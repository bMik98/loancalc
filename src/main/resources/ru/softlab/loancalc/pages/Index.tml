<div class="row">
    <t:form t:id="requestForm">
        <div class="col-sm-3">
            <label t:type="label" for="loanAmount">Amount</label>
            <input type="number" t:id="loanAmount" t:type="TextField" t:value="loanAmount"
                   min="100000" max="5000000" step="10000"/>
        </div>
        <div class="col-sm-3">
            <label t:type="label" for="loanTermInMonths"/>
            <input type="number" t:id="loanTermInMonths" t:type="TextField" t:value="loanTermInMonths"
                   min="12" max="60"/>
        </div>
        <div class="col-sm-3">
            <label t:type="label" for="loanRate">Interest Rate</label>
            <input type="number" id="loanRate" t:id="loanRate" t:type="TextField" t:value="loanRate"
                   min="12.9" max="23.9" step="0.1"/>
        </div>

        <div class="col-sm-3">
            <input type="submit" t:type="submit" value="Calculate"/>
        </div>
    </t:form>
</div>

<div>
    <br/>
    <table t:type="grid" source="payments" empty="emptyBlock" rowsPerPage="12" pagerPosition="top"/>
    <t:block id="emptyBlock">No payments yet</t:block>
</div>

