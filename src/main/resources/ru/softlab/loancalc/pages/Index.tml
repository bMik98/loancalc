<html t:type="layout" title="Annuity Loan Calculator"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">

<div class="row">
    <t:form t:id="requestForm">
        <div class="form-row">
            <div class="col-sm-3">
                <label t:type="label" for="loanAmount"/>
            </div>
            <div class="col-sm-3">
                <label t:type="label" for="loanTermInMonths"/>
            </div>
            <div class="col-sm-6">
                <label t:type="label" for="loanRate">Interest Rate</label>
            </div>
        </div>
        <div class="form-row">
            <div class="col-sm-3">
                <input type="number" t:id="loanAmount" t:type="TextField" t:value="loanAmount"
                       min="${minAmount}" max="5000000" step="10000"/>
            </div>
            <div class="col-sm-3">
                <input type="number" t:id="loanTermInMonths" t:type="TextField" t:value="loanTermInMonths"
                       min="12" max="60"/>
            </div>
            <div class="col-sm-3">
                <input type="number" id="loanRate" t:id="loanRate" t:type="TextField" t:value="loanRate"
                       min="12.9" max="23.9" step="0.1"/>
            </div>
            <div class="col-sm-3">
                <div class="btn-group btn-group-justified" role="group">
                    <div class="btn-group" role="group">
                        <input type="submit" style="background-color: #0f0f0f" t:type="submit"
                               value="Reset" event="reset"/>
                    </div>
                    <div class="btn-group" role="group">
                        <input class="btn btn-primary" type="submit" t:type="submit"
                               value="Calculate" event="calculate"/>
                    </div>
                </div>
            </div>
        </div>
    </t:form>
</div>

<div>
    <br/>
    <table t:type="grid" source="payments" empty="emptySchedule" rowsPerPage="12" pagerPosition="top"/>
    <t:block id="emptySchedule">Empty</t:block>
</div>

</html>
